                    android:text="@string/q2_hyp1" />

                <RadioButton
                    android:id="@+id/radio_q2_h2"
                    style="@style/hypothesis"
                    android:text="@string/q2_hyp2" />

                <RadioButton
                    android:id="@+id/radio_q2_h3"
                    style="@style/hypothesis"
                    android:text="@string/q2_hyp3" />

                <RadioButton
                    android:id="@+id/radio_q2_h4"
                    style="@style/hypothesis"
                    android:text="@string/q2_hyp4" />

            </RadioGroup>

            <TextView
                android:id="@+id/q2_comments"
                style="@style/comments"
                android:text="@string/q2_comment" />

            <Space style="@style/space" />

            <!--                                            3rd question -->
            <TextView
                style="@style/question_number"
                android:text="@string/three" />

            <TextView
                style="@style/title"
                android:text="@string/q3_title" />

            <TextView
                style="@style/question"
                android:text="@string/q3_question" />

            <CheckBox
                android:id="@+id/check_q3_h1"
