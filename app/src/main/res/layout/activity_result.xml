            <Space style="@style/space" />

            <!--                                            9th question -->

            <TextView
                style="@style/question_number"
                android:text="@string/nine" />

            <TextView
                style="@style/title"
                android:text="@string/q9_title" />

            <TextView
                style="@style/question"
                android:text="@string/q9_question" />

            <TextView
                android:id="@+id/edit_q9_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hypothesis_textview"
                android:layout_marginLeft="@dimen/question_margin" />

            <TextView
                android:id="@+id/q9_comments"
