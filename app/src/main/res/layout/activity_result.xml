<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/scrollview_margins"
        android:layout_marginRight="@dimen/scrollview_margins">

        <LinearLayout style="@style/linear_layout">

            <!--                                            1st question -->
            <TextView
                style="@style/question_number"
                android:text="@string/one" />

            <TextView
                style="@style/title"
                android:text="@string/q1_title"
                />

            <TextView
                android:id="@+id/textview_q1"
                style="@style/question"
                android:text="@string/q1_question" />

            <RadioGroup
                android:id="@+id/radio_group_q1"
                style="@style/radio">

                <RadioButton
                    android:id="@+id/radio_q1_h1"
                    style="@style/hypothesis"
                    android:text="@string/q1_hyp1" />

                <RadioButton
                    android:id="@+id/radio_q1_h2"
                    style="@style/hypothesis"
                    android:text="@string/q1_hyp2" />

                <RadioButton
                    android:id="@+id/radio_q1_h3"
                    style="@style/hypothesis"
                    android:text="@string/q1_hyp3" />

                <RadioButton
                    android:id="@+id/radio_q1_h4"
                    style="@style/hypothesis"
                    android:text="@string/q1_hyp4" />

            </RadioGroup>

            <Space style="@style/space" />

            <!--                                            2nd question -->
